<View xmlns="sap.m" controllerName="com.aml.controller.App" height="100%"
	xmlns:core="sap.ui.core">
	<Page showHeader="false" enableScrolling="false">
		<content>
			<Bar class="amlBar">
				<contentMiddle>
					<Text text="{i18n>title}" class="amlPagetitle sapUiTinyMarginTop"></Text>
				</contentMiddle>
				<contentRight>
					<MenuButton text="{i18n>language}" class="amlLangButton">
						<menu>
							<Menu itemSelected="switchLanguage">
								<items>
									<MenuItem id="dummy" text=" " />
									<MenuItem id="kannada" text="{i18n>languageKannada}" />
									<MenuItem id="english" text="{i18n>languageEnglish}" />
									<MenuItem id="hindi" text="{i18n>languageHindi}" />
								</items>
							</Menu>
						</menu>
					</MenuButton>
				</contentRight>
			</Bar>
			<OverflowToolbar id="toolbar">
				<ToggleButton text="{i18n>tabAbout}" type="Transparent"
					press="navToAbout" pressed="true" />
				<ToggleButton text="{i18n>tabUtsava}" type="Transparent"
					press="navToUtsava" />
				<ToggleButton text="{i18n>tabContactUs}" type="Transparent"
					press="navToContact" />
				<ToggleButton text="{i18n>tabEKanike}" type="Transparent"
					press="navToKanike" />
				<ToggleButton text="{i18n>tabSeva}" type="Transparent"
					press="navToSeva" />
				<ToggleButton text="{i18n>tabMap}" type="Transparent"
					press="navToMap" />
				<ToggleButton text="{i18n>tabDailyRoutine}" type="Transparent"
					press="navToRoutine" />
					<ToggleButton text="{i18n>tabTrust}" type="Transparent"
					press="navToTrust" />


			</OverflowToolbar>


			<NavContainer id="rootControl" />
		</content>
	</Page>

</View>