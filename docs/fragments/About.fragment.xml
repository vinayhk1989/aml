<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<l:Grid hSpacing="2">
		<l:content>
			<Image src="images/AMlakshmi.png" width="100%" height="80%">
				<layoutData>
					<l:GridData span="XL3 L3 M6 S12" />
				</layoutData>
			</Image>
			<VBox>
				<Text class="sapUiSmallMarginBeginEnd" text="{i18n>descAboutSec1}" />
				<Text class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop"
					text="{i18n>descAboutSec2}" />
				<Text class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop"
					text="{i18n>descAboutSec3}" />
				<Text class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop"
					text="{i18n>descAboutSec4}" />
				<layoutData>
					<l:GridData span="XL5 L5 M6 S12" />
				</layoutData>
			</VBox>
			<VBox>
			<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
					<tiles>
						<GenericTile backgroundImage="images/kmp_6.jpg"
							frameType="TwoByOne">
							<tileContent>
								<TileContent footer="{i18n>messageFooterTxt1}">
									<content>
										<NewsContent
											contentText="{i18n>messageTxt3}"
											subheader="{i18n>messageSubTxt1}"></NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
						<GenericTile backgroundImage="images/kmp_5.jpg"
							frameType="TwoByOne" press="pressOnVratha">
							<tileContent>
								<TileContent footer="{i18n>messageFooterTxt1}">
									<content>
										<NewsContent contentText="{i18n>messageTxt4}"
											subheader="{i18n>messageSubTxt1}"></NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</tiles>
				</SlideTile>
				<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
					<tiles>
						<GenericTile backgroundImage="images/kmp_3.jpg"
							frameType="TwoByOne">
							<tileContent>
								<TileContent footer="{i18n>messageFooterTxt1}">
									<content>
										<NewsContent
											contentText="{i18n>messageTxt1}"
											subheader="{i18n>messageSubTxt1}"></NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
						<GenericTile backgroundImage="images/kmp_4.jpg"
							frameType="TwoByOne">
							<tileContent>
								<TileContent footer="{i18n>messageFooterTxt1}">
									<content>
										<NewsContent
											contentText="{i18n>messageTxt2}"
											subheader="{i18n>messageSubTxt1}"></NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</tiles>
				</SlideTile>
				
				<layoutData>
					<l:GridData span="XL4 L4 M6 S12" />
				</layoutData>
			</VBox>
		</l:content>
	</l:Grid>
	<!-- <Image src="images/AMlakshmi.png" densityAware="false" width="25%"/> -->
</core:FragmentDefinition>